@model IEnumerable<DeptEmp.Models.Department>


@using (Html.BeginForm())
{
    if (Model.Count() != 0)
    {
        <h2>Enter Department Id</h2>

        @Html.TextBox("Id");
        <input type="submit" value="submit" formaction="Home/List" formmethod="post" />

        <br />
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                </tr>
            }

        </table>

    }
    else
    {
        <h2>Department table is empty</h2>
        <h3>Fill the table with data in MS SQL</h3>
    }
}
